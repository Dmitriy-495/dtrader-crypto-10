# ==========================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ==========================================

# Режим работы
NODE_ENV=development

# Порт WebSocket сервера
SERVER_PORT=28080

# ==========================================
# GATE.IO API КЛЮЧИ
# ==========================================

# API Key (получить на https://www.gate.io/ru/api)
GATE_IO_API_KEY=your_api_key_here

# Secret Key (получить на https://www.gate.io/ru/api)  
GATE_IO_SECRET_KEY=your_secret_key_here

# ==========================================
# НАСТРОЙКИ ПОДКЛЮЧЕНИЯ
# ==========================================

# URL WebSocket Gate.io
GATE_IO_WS_URL=wss://ws.gate.io/v4/

# Интервал ping (секунды)
GATE_IO_PING_INTERVAL=30

# ==========================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ==========================================

# Секретный ключ для подписи
APP_SECRET=your_app_secret_here